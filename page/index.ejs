<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>UserScript Repository</title>
  <link rel="stylesheet" href="style.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="container">
    <header>
      <h1>UserScript Repository</h1>
    </header>

    <main>
      <table id="userScripts">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Description</th>
            <th>Author</th>
            <th>Version</th>
            <th>Download</th>
          </tr>
        </thead>
        <tbody>
          <% scripts.forEach((script, index) => { %>
            <tr>
              <td>
                <% if (script.icon) { %>
                  <img src="<%= script.icon %>" alt="Icon" class="icon">
                <% } %>
              </td>
              <td><%= script.name %></td>
              <td class="description" title="<%= script.description %>"><%= script.description %></td>
              <td><%= script.author %></td>
              <td><%= script.version %></td>
              <td><a href="/scripts/<%= script.filePath %>" class="download-link">Download</a></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </main>
  </div>
</body>
</html>