<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>UserScript Repository</title>
  <link rel="stylesheet" href="style.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <script src="script.js" defer></script>
</head>
<body>
  <div class="container">
    <header>
      <h1>UserScript Repository</h1>
      <input type="text" id="searchBox" placeholder="Search scripts..." class="search-box">
    </header>

    <main id="mainContent">
      <!-- 首页内容 -->
      <table id="userScripts">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Description</th>
            <th>Author</th>
            <th>Version</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="scriptList">
          <% scripts.forEach((script, index) => { %>
            <tr class="script-row" data-script-id="<%= script.id %>">
              <td><%= index + 1 %></td>
              <td>
                <a href="detail-<%= script.id %>.html" class="script-link">
                  <% if (script.icon) { %>
                    <img src="<%= script.icon %>" alt="Icon" class="icon">
                  <% } %>
                  <%= script.name %>
                </a>
              </td>
              <td class="description" title="<%= script.description %>"><%= script.description %></td>
              <td><%= script.author %></td>
              <td><%= script.version %></td>
              <td><a href="<%= script.downloadLink %>" class="download-link">Add</a></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </main>
  </div>
</body>
</html>